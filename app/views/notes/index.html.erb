<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto text-center">
      <h1>試合記録一覧</h1>
        <br>
        <div class = "text-center">
          <%= link_to t('header.create_note'), new_note_path, class: 'link-button' %>
        </div>
        <br>
        <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <form>
        <div class="input-group mb-3"><input class="form-control" placeholder="検索ワード" type="search"/>
          <div class="input-group-append"><input type="submit" value="検索" class="btn btn-primary"/></div>
        </div>
      </form>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @notes.present? %>
          <%= render @notes %>
        <% else %>
          <div class="mb-3">試合記録はありません</div>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>



    
