<div class="col-sm-12 col-lg-4 mb-3">
  <div id="match-id-<%= match.id %>">
    <div class="card">
      <div class="card-body">
        <div class="d-flex">
          <h4 class="card-title">
            <%= link_to match.title, '#' %>
          </h4>
          <div class='ms-auto'>
            <%= link_to '#', id: 'button-edit-#{match.id}' do %>
              <i class="bi bi-pencil-fill"></i>
            <% end %>
            <%= link_to '#', id: 'button-delete-#{match.id}', method: :delete, data: {confirm: ''} do %>
              <i class="bi bi-trash-fill"></i>
            <% end %>
          </div>
        </div>
        <ul class="list-inline">
          <li><i class="bi bi-person"></i><%= match.user.decorate.full_name %></li>
          <li><i class="bi bi-calendar"></i><%= l match.created_at, format: :short %></li>
        </ul>
        <p class="card-text">本文</p>
      </div>
    </div>
  </div>
</div>
