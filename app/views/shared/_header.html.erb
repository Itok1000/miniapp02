<header>
  <nav class='navbar navbar-expand-lg navigation navbar-light bg-light'>
    <%= link_to '/', class: 'navbar-brand' do %>
      <%= image_tag '凡事徹底.png', width: '50px', height: '50px' %>
    <% end %>
    <button class='navbar-toggler' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent'
      aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>

    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ms-auto main-nav align-items-center'>
        <li class='nav-item dropdown dropdown-slide'>
          <%= link_to t('header.battle'), '#', class: 'nav-link dropdown-toggle', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, id: 'header-board-menu' %>
          <div class='dropdown-menu dropdown-menu-end'>
            <%= link_to t('header.how_to_use'), how_to_use_path, class: 'dropdown-item' %>
            <%= link_to t('header.battle_index'), notes_path, class: 'dropdown-item' %>
            <%= link_to t('header.create_board'), new_note_path, class: 'dropdown-item' %>
          </div>
        </li>

        <li class='nav-item'>
          <%= link_to t('header.bookmark_index'), '#', class: 'nav-link' %>
        </li>
        <li class='nav-item'>
          <%= link_to t('header.logout'), logout_path, class: 'dropdown-item', data: { turbo_method: :delete }%>
        </li>
      </ul>
    </div>
  </nav>
</header>